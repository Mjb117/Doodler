<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sizebarTextView"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:id="@+id/sizeSeekbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/sizebarTextView"
        android:layout_alignBottom="@+id/sizebarTextView"
        android:max="100" />

    <TextView
        android:text="Set Brush Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sizeTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/sizebarTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:layout_below="@+id/sizeTextView"
        android:layout_alignLeft="@+id/sizeTextView"
        android:layout_alignStart="@+id/sizeTextView" />

</RelativeLayout>
